<section class="form signup-form">
  <div class="form-container">
    {{!-- <form action="/signUp" method="POST"> --}}
    <form class="signup-form">
      <div class="form-group">
        <label for="username-signup">Username</label>
        <input type="text" id="username-signup" class="form-input" required>
      </div>
      <div class="form-group">
        <label for="email-signup">Email Address</label>
        <input class="form-input" type="text" id="email-signup" required>
      </div>
      <div class="form-group">
        <label for="password-signup">Password</label>
        <input class="form-input" type="password" id="password-signup" minlength="8" required>
      </div>
      <div class="form-group">
        <button class="btn btn-primary" type="submit">Sign Up</button>
      </div>
    </form>
  </div>
</section>

<script src="./js/login.js"></script>
